    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo/2013.1.319/kendo.common.min.css")
    @Styles.Render("~/Content/kendo/2013.1.319/kendo.default.min.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @* kendo ui*@
    @Scripts.Render("~/bundles/kendo")
    
    
        
    <!-- Common Kendo UI Web CSS -->
    <link href="~/Content/kendo/2013.1.319/kendo.common.min.css" rel="stylesheet" />
    <!-- Default Kendo UI Web theme CSS -->
    <link href="~/Content/kendo/2013.1.319/kendo.default.min.css" rel="stylesheet" />
    <!-- jQuery JavaScript -->
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <!-- Kendo UI Web combined JavaScript -->
    <script src="~/Scripts/kendo/2013.1.319/kendo.web.min.js"></script>

</head>
<body>
    <header>
        <div class="content-wrapper" style="margin-left: 250px">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Employees' bonuses", "Index", "Bonuses")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix" style="margin-left: 250px">
            <!--[if lt IE 8]> IE 7 or less is not supported. Please, update your browser. <![endif]-->
            @RenderBody()
        </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-right">
                    <p>&copy; @DateTime.Now.Year - SoftServe inc.</p>
                </div>
            </div>
        </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
